        </div>
    </div>
</div>

<div class="sceneShow district" id="sceneShow">
    <div class="container content">
        <div id="scene-show-cells" class="cont cfb-clearfix">
            <ul>
                <div>
                    @foreach (var item in ViewBag.Data)
                    {
                        <a class="cell" href="~/Scene/Index?sn=@item.scenicName">
                            <div class="img-show">
                                <img src="@item.imageAddress">
                            </div>
                            <div class="txt">
                                <p class="name">@item.scenicName</p>
                                <p class="address">@item.address</p>
                                <div class="score">
                                    @for (var i = 0; i < item.rate; i++)
                                    {
                                        <img src="~/Content/image/home/star.png">
                                    }
                                    <span class="score-num">@item.rate</span>
                                </div>

                            </div>
                        </a>
                    }
                </div>
            </ul>
        </div>
    </div>
</div>

