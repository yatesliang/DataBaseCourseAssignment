@model SceneView.Controllers.ProfileController.ProfileData

@{
    if (Session["user"] == null)
    {
        HttpContext.Current.Response.Redirect("/Login");
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>个人主页</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <script type="text/javascript" src="~/Content/profile/js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/skin-select/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/clock/date.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/newsticker/jquery.newsTicker.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/custom/scriptbreaker-multiple-accordion-1.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/main.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/custom/sc"></script>

    <link rel="stylesheet" href="~/Content/profile/css/extra-pages.css" />
    <link rel="stylesheet" href="~/Content/profile/css/style.css">
    <link rel="stylesheet" href="~/Content/profile/css/loader-style.css">
    <link rel="stylesheet" href="~/Content/profile/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/profile/css/media.css">
    <link rel="stylesheet" href="~/Content/profile/js/skin-select/skin-select.css" />
    <script type="text/javascript" src="~/Content/profile/js/skin-select/skin-select.js"></script>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="~/Content/profile/ico/minus.png">
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!-- TOP NAVBAR -->
    <nav role="navigation" class="navbar navbar-static-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" class="navbar-toggle" type="button">
                    <span class="entypo-menu"></span>
                </button>
                <button class="navbar-toggle toggle-menu-mobile toggle-left" type="button">
                    <span class="entypo-list-add"></span>
                </button>

                <div id="logo-mobile" class="visible-xs">
                    <h1>个人主页</h1>
                </div>

            </div>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">

                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        @{
                            int count = Model.noteLikeMesData.Count() + Model.commentLikeMesData.Count() + Model.commentReplyMesData.Count();
                        }
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i style="font-size:20px;" class="icon-conversation"></i><div class="noft-red">@count</div></a>


                        <ul style="margin: 11px 0 0 9px;" role="menu" class="dropdown-menu dropdown-wrap">
                            @{
                                var flag = 0;
                            }
                            @foreach (var m in Model.commentLikeMesData)
                            {
                                flag = flag + 1;
                                if (flag <= 5)
                                {
                                    <li>
                                        <a href="#">
                                            <img alt="" class="img-msg img-circle" src="@m.user.userInfo.headPortrait">@m.user.userInfo.nickname<b>@m.time</b>
                                            <br /><p>点赞了我的评论</p>
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                }
                            }
                            @foreach (var m in Model.commentReplyMesData)
                            {
                                flag = flag + 1;
                                if (flag <= 5)
                                {
                                    <li>
                                        <a href="#">
                                            <img alt="" class="img-msg img-circle" src="@m.commentReply.user.userInfo.headPortrait">@m.commentReply.user.userInfo.nickname<b>@m.commentReply.commentTime</b>
                                            <br /><p>回复了我的评论</p>
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                }
                            }
                            @foreach (var m in Model.noteLikeMesData)
                            {
                                flag = flag + 1;
                                if (flag <= 5)
                                {
                                    <li>
                                        <a href="#">
                                            <img alt="" class="img-msg img-circle" src="@m.user.userInfo.headPortrait">@m.user.userInfo.nickname<b>@m.time</b>
                                            <br /><p>点赞了我的游记</p>
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                }
                            }
                            <li>
                                <div><a href="">查看全部</a></div>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- 展示时间、日期、天气，仍然需要改 -->
                <div id="nt-title-container" class="navbar-left running-text visible-lg">
                    <ul class="date-top">
                        <li class="entypo-calendar" style="margin-right:5px"></li>
                        <li id="Date"></li>
                    </ul>

                    <ul id="digital-clock" class="digital">
                        <li class="entypo-clock" style="margin-right:5px"></li>
                        <li class="hour"></li>
                        <li>:</li>
                        <li class="min"></li>
                        <li>:</li>
                        <li class="sec"></li>
                        <li class="meridiem"></li>
                    </ul>
                    <ul id="nt-title">
                        <li>
                            <i class="wi-day-lightning"></i>&#160;&#160;Berlin&#160;
                            <b>85</b><i class="wi-fahrenheit"></i>&#160;; 15km/h
                        </li>
                        <li>
                            <i class="wi-day-lightning"></i>&#160;&#160;Yogyakarta&#160;
                            <b>85</b><i class="wi-fahrenheit"></i>&#160;; Tonight- 72 °F (22.2 °C)
                        </li>

                        <li>
                            <i class="wi-day-lightning"></i>&#160;&#160;Sttugart&#160;
                            <b>85</b><i class="wi-fahrenheit"></i>&#160;; 15km/h
                        </li>

                        <li>
                            <i class="wi-day-lightning"></i>&#160;&#160;Muchen&#160;
                            <b>85</b><i class="wi-fahrenheit"></i>&#160;; 15km/h
                        </li>

                        <li>
                            <i class="wi-day-lightning"></i>&#160;&#160;Frankurt&#160;
                            <b>85</b><i class="wi-fahrenheit"></i>&#160;; 15km/h
                        </li>

                    </ul>
                </div>

                <ul style="margin-right:0;" class="nav navbar-nav navbar-right">
                    <li>
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" class="admin-pic img-circle" src="@Model.userData.userInfo.headPortrait">Hi, @Model.userData.userInfo.nickname
                            <b class="caret"></b>

                        </a>
                        <ul style="margin-top:14px;" role="menu" class="dropdown-setting dropdown-menu">
                            <li>
                                <a href="#">
                                    <span class="entypo-user"></span>&#160;&#160;注销账户
                                </a>
                            </li>
                            <li>
                                <a href="/Home">
                                    <span class="entypo-vcard"></span>&#160;&#160;返回首页
                                </a>
                            </li>
                        </ul>

                    </li>
                    
                </ul>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- /END OF TOP NAVBAR -->
    <!-- SIDE MENU -->
    <div id="skin-select">
        <div id="logo">
            <h1>个人主页</h1>
        </div>

        <a id="toggle">
            <span class="entypo-menu"></span>
        </a>

        <div class="skin-part">
            <div id="tree-wrap">
                <div class="side-bar">
                    <ul class="topnav menu-left-nest">
                        <li>
                            <a class="tooltip-tip ajax-load" href="/Profile" title="我的故事">
                                <i class="icon-heart"></i>
                                <span>我的故事</span>

                            </a>
                        </li>
                        <li>
                            <a class="tooltip-tip ajax-load" href="/Profile/message" title="我的消息">
                                <i class="icon-conversation"></i>
                                <span>我的消息</span>

                            </a>
                        </li>
                        <li>
                            <a class="tooltip-tip ajax-load" href="/profile/timeline" title="我的足迹">
                                <i class="icon-location"></i>
                                <span>我的足迹</span>

                            </a>
                        </li>
                        <li>
                            <a class="tooltip-tip ajax-load" href="/profile/setting" title="个人资料">
                                <i class="icon-document-edit"></i>
                                <span>个人资料</span>

                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF SIDE MENU -->

    @RenderBody();

    <!-- MAIN EFFECT -->
    <script type="text/javascript" src="~/Content/profile/js/preloader.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/app.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/load.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/main.js"></script>
    <script type="text/javascript" src="~/Content/profile/js/flatvideo/jquery.fitvids.js"></script>

    <script>
        // Basic FitVids Test
        $(".well-media").fitVids();
        $(".vendor").fitVids();
        // Custom selector and No-Double-Wrapping Prevention Test
        $(".well-media").fitVids({
            customSelector: "iframe[src^='http://socialcam.com']"
        });
    </script>

</body>

</html>
