@model SceneView.Controllers.ProfileController.ProfileData

@{ 
    var messageCount = Model.commentReplyMesData.Count() + Model.commentLikeMesData.Count() + Model.noteLikeMesData.Count();
    var flag = 0;
}

<!DOCTYPE html>
<html>
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="format-detection" content="telephone=no">
    <meta charset="UTF-8">

    <meta name="description" content="Violate Responsive Admin Template">
    <meta name="keywords" content="Super Admin, Admin, Template, Bootstrap">

    <title>@Model.userData.userInfo.nickname</title>

    <!-- CSS -->
    <link href="~/Content/profile/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/profile/animate.min.css" rel="stylesheet">
    <link href="~/Content/profile/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/profile/form.css" rel="stylesheet">
    <link href="~/Content/profile/calendar.css" rel="stylesheet">
    <link href="~/Content/profile/style.css" rel="stylesheet">
    <link href="~/Content/profile/icons.css" rel="stylesheet">
    <link href="~/Content/profile/generics.css" rel="stylesheet">
</head>
<body id="skin-blur-ocean">

    <header id="header" class="media">
        <a href="" id="menu-toggle"></a>
        <a class="logo pull-left" href="index.html">个人主页</a>

        <div class="media-body">
            <div class="media" id="top-menu">
                <div class="pull-left tm-icon">
                    <a data-drawer="messages" class="drawer-toggle" href="">
                        <i class="sa-top-message"></i>
                        <i class="n-count animated">@messageCount</i>
                        <span>消息</span>
                    </a>
                </div>
                <div id="time" class="pull-right">
                    <span id="hours"></span>
                    :
                    <span id="min"></span>
                    :
                    <span id="sec"></span>
                </div>
            </div>
        </div>
    </header>

    <div class="clearfix"></div>

    <section id="main" class="p-relative" role="main">

        <!-- Sidebar -->
        <aside id="sidebar">

            <!-- Sidbar Widgets -->
            <div class="side-widgets overflow">
                <!-- Profile Menu -->
                <div class="text-center s-widget m-b-25 dropdown" id="profile-menu">
                    <a href="" data-toggle="dropdown">
                        <img class="profile-pic animated" src="~/Content/image/profile/profile-pic.jpg" alt="">
                    </a>
                    <ul class="dropdown-menu profile-menu">
                        <li><a href="~/profile/setting">个人资料</a> <i class="icon left"></i><i class="icon right"></i></li>
                        <li><a href="~/profile/note">游记</a> <i class="icon left"></i><i class="icon right"></i></li>
                        <li><a href="~/profile/message">消息</a> <i class="icon left"></i><i class="icon right"></i></li>
                        <li><a href="~/profile/timeline">时间线</a> <i class="icon left"></i><i class="icon right"></i></li>
                        <li><a href="~/profile/cancel">注销</a> <i class="icon left"></i><i class="icon right"></i></li>
                    </ul>
                    <h4 class="m-0">@Model.userData.userInfo.nickname</h4>
                </div>

                <!-- Calendar -->
                <div class="s-widget m-b-25">
                    <div id="sidebar-calendar"></div>
                </div>

            </div>

            <!-- 边框菜单 -->
            <ul class="list-unstyled side-menu">
                <li class="active">
                    <a class="sa-side-home" href="">
                        <span class="menu-item">主页</span>
                    </a>
                </li>
                <li>
                    <a class="sa-side-typography" href="">
                        <span class="menu-item">游记</span>
                    </a>
                </li>
                <li>
                    <a class="sa-side-widget" href="">
                        <span class="menu-item">消息</span>
                    </a>
                </li>
                <li>
                    <a class="sa-side-table" href="">
                        <span class="menu-item">时间线</span>
                    </a>
                </li>
                <li class="dropdown">
                    <a class="sa-side-form" href="">
                        <span class="menu-item">消息</span>
                    </a>
                    <ul class="list-unstyled menu-item">
                        <li><a href="form-elements.html">我回复的</a></li>
                        <li><a href="form-components.html">回复我的</a></li>
                    </ul>
                </li>
                </ul>
        </aside>

        <!-- Content -->
        <section id="content" class="container">
            <ol class="breadcrumb hidden-xs">
                <li><a href="#">Home</a></li>
            </ol>

            <!-- Messages Drawer -->
            <div id="messages" class="tile drawer animated">
                <div class="listview narrow">
                    <div class="media">
                        <a>我收到的回复</a>
                        <span class="drawer-close">&times;</span>

                    </div>
                    <div class="overflow" style="height: 254px">

                        @foreach (var m in Model.commentLikeMesData)
                        {
                            flag = flag + 1;
                            if (flag <= 5)
                            {
                                <div class="media">
                                    <div class="pull-left">
                                        <img width="40" src="@m.user.userInfo.headPortrait" alt="">
                                    </div>
                                    <div class="media-body">
                                        <small class="text-muted">@m.user.userInfo.nickname</small>
                                        <small class="text-warning">@m.time</small>
                                        <br>
                                        <a class="t-overflow">点赞了我的评论</a>
                                    </div>
                                </div>
                            }
                        }
                        @foreach (var m in Model.commentReplyMesData)
                        {
                            flag = flag + 1;
                            if (flag <= 5)
                            {
                                <div class="media">
                                    <div class="pull-left">
                                        <img width="40" src="@m.user.userInfo.headPortrait" alt="">
                                    </div>
                                    <div class="media-body">
                                        <small class="text-muted">@m.user.userInfo.nickname</small>
                                        <small class="text-warning">@m.time</small><br>
                                        <a class="t-overflow">回复了我的评论</a>
                                    </div>
                                </div>
                            }
                        }
                        @foreach (var m in Model.noteLikeMesData)
                        {
                            flag = flag + 1;
                            if (flag <= 5)
                            {
                                <div class="media">
                                    <div class="pull-left">
                                        <img width="40" src="@m.user.userInfo.headPortrait" alt="">
                                    </div>
                                    <div class="media-body">
                                        <small class="text-muted">@m.user.userInfo.nickname</small>
                                        <small class="text-warning">@m.time</small><br>
                                        <a class="t-overflow">点赞了我的游记</a>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    <div class="media text-center whiter l-100">
                        <a href="~/Profile/Message"><small>查看全部</small></a>
                    </div>
                </div>
            </div>


            <!-- Breadcrumb -->
            @*<ol class="breadcrumb hidden-xs">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
        </ol>*@

            <h4 class="page-title">个人中心</h4>

            <!-- Shortcuts -->
            <div class="block-area shortcut-area">
                <a class="shortcut tile" href="">
                    <img src="~/Content/image/profile/shortcuts/money.png" alt="">
                    <small class="t-overflow">Purchases</small>
                </a>
            </div>

            <hr class="whiter" />

            <!-- Main Widgets -->

            <div class="block-area">
                <div class="row">
                    <div class="col-md-8">


                        <!--  我的评论 -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="tile">
                                    <h2 class="tile-title">我的评论</h2>
                                    <div class="tile-config dropdown">
                                        <a data-toggle="dropdown" href="" class="tile-menu"></a>
                                        <ul class="dropdown-menu animated pull-right text-right">
                                            <li><a href="">Refresh</a></li>
                                        </ul>
                                    </div>

                                    <div class="listview narrow">
                                        @foreach (var c in Model.commentsData)
                                        {
                                            <div class="media p-l-5">
                                                <div class="media-body">
                                                    <small class="text-muted">@c.commentTime</small><br />
                                                    <a class="t-overflow" href="">@c.commentContent</a>
                                                </div>
                                            </div>
                                        }

                                        <div class="media p-5 text-center l-100">
                                            <a href="~/profile/comments"><small>查看全部</small></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="tile">
                                    <h2 class="tile-title">我的游记</h2>
                                    <div class="tile-config dropdown">
                                        <a data-toggle="dropdown" href="" class="tile-menu"></a>
                                        <ul class="dropdown-menu animated pull-right text-right">
                                            <li><a href="">Refresh</a></li>
                                        </ul>
                                    </div>

                                    <div class="listview narrow">
                                        @foreach (var c in Model.userData.note)
                                        {
                                            <div class="media p-l-5">
                                                <div class="media-body">
                                                    <small class="text-muted">@c.noteTime</small><br />
                                                    <a class="t-overflow" href="">@c.noteContent</a>
                                                </div>
                                            </div>
                                        }

                                        <div class="media p-5 text-center l-100">
                                            <a href="~/profile/note"><small>查看全部</small></a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- 我想去的地方-->
                            <div class="col-md-6">
                                <div class="tile">
                                    <h2 class="tile-title">我想去的地方</h2>
                                    <div class="tile-config dropdown">
                                        <a data-toggle="dropdown" href="" class="tile-menu"></a>
                                        <ul class="dropdown-menu pull-right text-right">
                                            <li id="todo-refresh"><a href="">Refresh</a></li>
                                        </ul>
                                    </div>

                                    <div class="listview todo-list sortable">
                                        @foreach (var s in Model.userData.scenicSpot)
                                        {
                                            <div class="media">
                                                <div class="checkbox m-0">
                                                    <label class="t-overflow">
                                                        <input type="checkbox">
                                                        @s.scenicName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <h2 class="tile-title">我去过的地方</h2>

                                    <div class="listview todo-list sortable">
                                        @foreach (var s in Model.userData.scenicSpot)
                                        {
                                            <div class="media">
                                                <div class="checkbox m-0">
                                                    <label class="t-overflow">
                                                        <input type="checkbox" checked="checked">
                                                        @s.scenicName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="col-md-4">

                        <!-- 个人数据统计 -->
                        <div class="tile">
                            <h2 class="tile-title">个人数据统计</h2>
                            <div class="tile-config dropdown">
                                <a data-toggle="dropdown" href="" class="tile-menu"></a>
                                <ul class="dropdown-menu pull-right text-right">
                                    <li><a href="">Refresh</a></li>
                                    <li><a href="">Settings</a></li>
                                </ul>
                            </div>

                            <div class="listview narrow">

                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.userData.scenicSpot.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我去过的地方</h6>
                                    </div>
                                </div>
                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.userData.scenicSpot.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我想去的地方</h6>
                                    </div>
                                </div>
                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.commentsData.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我的评论数量</h6>
                                    </div>
                                </div>
                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.userData.note.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我的游记数量</h6>
                                    </div>
                                </div>
                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.userData.commentLikeMes.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我的评论点赞数量</h6>
                                    </div>
                                </div>
                                <div class="media">
                                    <div class="pull-right">
                                        <div class="counts">@Model.userData.noteLikeMes.Count()</div>
                                    </div>
                                    <div class="media-body">
                                        <h6>我的游记点赞数量</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>

