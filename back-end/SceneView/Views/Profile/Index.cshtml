@model SceneView.Controllers.ProfileController.ProfileData

@{ 
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
}

<!--  PAPER WRAP -->
<div class="wrap-fluid">
    <div class="container-fluid paper-wrap bevel tlbr">

        <div class="row">
            <div id="paper-top">
                <div class="col-sm-3">
                    <h2 class="tittle-content-header"> <em class="icon-camera"></em> <span>我的故事 </span> </h2>
                </div>

                <div class="col-sm-7">
                    <div class="devider-vertical visible-lg"></div>
                    <div class="tittle-middle-header">

                        <div class="alert">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <span class="tittle-alert entypo-info-circled"></span>
                            欢迎回来 &nbsp;
                            <strong>@Model.userData.userInfo.nickname</strong>&nbsp;&nbsp; 我等你很久了！
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ TITLE -->
        <!-- BREADCRUMB -->
        <ul id="breadcrumb">
            <li>
                <a href="/profile"><span class="entypo-home"></span></a>
            </li>
            <li>
                <i class="fa fa-lg fa-angle-right"></i>
            </li>
            <li>
                <a href="/profile" title="Sample page 1">我的故事</a>
            </li>
            <li class="pull-right">
                <div class="input-group input-widget">
                    @using (Html.BeginForm("index", "profile", FormMethod.Post))
                    {
                        @Html.TextBoxFor(p=>p.note.title, new { @style = "border-radius:15px", @type = "text", @placeholder = "查找游记", @class="form-control" })
                        @*<input style="border-radius:15px" type="text" placeholder="查找游记" class="form-control">*@
                    }
                </div>
            </li>
        </ul>

        <!-- END OF BREADCRUMB -->
        <!-- MASONRY MEDIA-->
        <div class="container-fluid" style="padding:0 30px!important;margin-top:30px;">

            <div class="row-mansory">
                <!-- VIDEO -->
                @if (Model.userData.note.Count() == 0)
                {
                    <span>您还没有写游记或没找到所需要的游记！</span>
                }
                @{
                    bool color = true;
                    foreach (var n in Model.userData.note)
                    {
                        color = (new Random().Next() % 2 == 0);
                        {
                            var bg = color ? "album-category-bg" : "photo-category-bg";
                            var triangle = color ? "triangle-album-right" : "triangle-photo-right";
                        <div class="col-md-4">
                            <div class="well-media">

                                <div class="vendor">

                                    @{
                                        var noteAddr = "/Scene/singleNote?nn=" + n.noteID;
                                    }
                                    <a class="fancybox" rel="group" href="@noteAddr">
                                        <img class="img-responsive-media" src="@n.scenicSpot.image.FirstOrDefault().imageAddress" alt="">
                                    </a>
                                </div>
                                <div class="video-text">
                                    <h2>@n.title</h2>
                                    <p>@n.noteTime</p>
                                </div>
                                <div class="@bg">
                                    <h3>@n.scenicSpot.scenicName</h3>
                                    <a class="link-media pull-right" href="@noteAddr">
                                        <span class="fontawesome-edit"></span>
                                    </a>
                                    <div class="triangle-white"></div>
                                    <div class="@triangle"></div>
                                </div>

                            </div>
                        </div>
                        }
                    }
                }
                <!-- END OF VIDEO -->

            </div>
        </div>

        <!-- FOOTER -->
        <div class="footer-space"></div>
        <div id="footer">
            <div class="devider-footer-left"></div>
            <div class="time">
                <p id="spanDate">
                <p id="clock">
            </div>
            <div class="copyright">
                用空多回回家
                <span class="entypo-heart"></span><a href="/profile">@Model.userData.userInfo.nickname</a> 这世界有很多人爱着你
            </div>
            <div class="devider-footer"></div>

        </div>
        <!-- / END OF FOOTER -->


    </div>
</div>
<!--  END OF PAPER WRAP -->