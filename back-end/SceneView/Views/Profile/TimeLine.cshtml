@model SceneView.Controllers.ProfileController.ProfileData

@{
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
}

<!--  PAPER WRAP -->
<div class="wrap-fluid">
    <div class="container-fluid paper-wrap bevel tlbr">

        <div class="row">
            <div id="paper-top">
                <div class="col-sm-3">
                    <h2 class="tittle-content-header"> <em class="icon-camera"></em> <span>我的足迹 </span> </h2>
                </div>

                <div class="col-sm-7">
                    <div class="devider-vertical visible-lg"></div>
                    <div class="tittle-middle-header">

                        <div class="alert">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <span class="tittle-alert entypo-info-circled"></span>
                            欢迎回来 &nbsp;
                            <strong>@Model.userData.userInfo.nickname</strong>&nbsp;&nbsp; 我等你很久了！
                        </div>


                    </div>

                </div>

            </div>
        </div>
        <!--/ TITLE -->
        <!-- BREADCRUMB -->
        <ul id="breadcrumb">
            <li>
                <a href="/profile"><span class="entypo-home"></span></a>
            </li>
            <li>
                <i class="fa fa-lg fa-angle-right"></i>
            </li>
            <li>
                <a href="/profile/timeline">我的足迹</a>
            </li>
        </ul>

        <!-- END OF BREADCRUMB -->



        <div class="content-wrap">
            <div class="time-wrap">
                @* 我想去的地方 *@
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <ul class="timeline">
                            <!-- timeline time label -->
                            <li class="time-label">
                                <span class="bg-red">
                                    我的计划
                                </span>
                            </li>
                            <!-- /.timeline-label -->

                            @foreach (var u in Model.userData.scenicSpot)
                            {
                                <!-- timeline item -->
                                <li>
                                    <i class="fa fa-book bg-time"></i>
                                    <div class="timeline-item">
                                        @using (Html.BeginForm("Gone", "Profile", FormMethod.Post))
                                        {
                                            @Html.TextBoxFor(p => p.viewed.userID, new { Value = Model.userData.userID, @type = "hidden" })
                                            @Html.TextBoxFor(p => p.viewed.scenicID, new { Value = u.scenicID, @type = "hidden" })
                                            <h3 class="timeline-header"><a href="/Scene/Index?sn=@u.scenicName">@u.scenicName</a></h3>
                                            <div class="timeline-body">
                                                @u.scenicIntroduction
                                            </div>
                                            <div class='timeline-footer'>
                                                <input type="submit" class="btn btn-primary btn-xs" value="已去" />
                                            </div>
                                        }
                                    </div>
                                </li>
                            }

                            <!-- END timeline item -->

                            <li>
                                <i class="fa fa-clock-o bg-time"></i>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                @* 我去过的地方 *@
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <ul class="timeline">
                            <!-- timeline time label -->
                            <li class="time-label">
                                <span class="bg-red">
                                    我的旅程
                                </span>
                            </li>
                            <!-- /.timeline-label -->

                            @foreach (var u in Model.userData.scenicSpot1)
                            {
                                <!-- timeline item -->
                                <li>
                                    <i class="fa fa-camera bg-time"></i>
                                    <div class="timeline-item">
                                        @using (Html.BeginForm("Gone", "Profile", FormMethod.Post))
                                        {
                                            @*<span class="time"><i class="fa fa-clock-o"></i> 12:05</span>*@
                                            <h3 class="timeline-header"><a href="/Scene/Index?sn=@u.scenicName">@u.scenicName</a></h3>
                                            <div class="timeline-body">
                                                @u.scenicIntroduction
                                            </div>
                                            if (Model.userData.note.Where(n => n.scenicID == u.scenicID).ToList().Count != 0)
                                            {
                                                <div class='timeline-footer'>
                                                    我在这里留下了游记:
                                                    <ul>
                                                        @foreach (var n in Model.userData.note.Where(n => n.scenicID == u.scenicID).ToList())
                                                        {
                                                            <li>
                                                                <a href="/scenehome/singlenote?nn=@n.noteID">@n.title</a>
                                                            </li>
                                                        }
                                                    </ul>

                                                </div>
                                            }
                                        }
                                    </div>
                                </li>
                            }


                            <!-- END timeline item -->

                            <li>
                                <i class="fa fa-clock-o bg-time"></i>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12">&nbsp;</div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->


            </div>
        </div>

        <!-- FOOTER -->
        <div class="footer-space"></div>
        <div id="footer">
            <div class="devider-footer-left"></div>
            <div class="time">
                <p id="spanDate">
                <p id="clock">
            </div>
            <div class="copyright">
                用空多回回家
                <span class="entypo-heart"></span><a href="/profile">@Model.userData.userInfo.nickname</a> 这世界有很多人爱着你
            </div>
            <div class="devider-footer"></div>

        </div>
        <!-- / END OF FOOTER -->


    </div>
</div>
<!--  END OF PAPER WRAP -->