        </div>
    </div>
    
    <!-- Javascript -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/supersized.3.2.7.min.js"></script>
    <script src="~/Scripts/supersized-init.js"></script>
    <script src="~/Scripts/scripts.js"></script>

</body>

</html>
