                <script type="text/javascript">

                         var curIndex = 0,  //当前index
                                  imgLen = $(".relv-content-list li").length;  //图片总数
                                // 定时器自动变换2.5秒每次
                          var autoChange = setInterval(function(){
                              if(curIndex <  imgLen-1){
                                  curIndex ++;
                              }else{
                                  curIndex = 0;
                              }
                              //调用变换处理函数
                              changeTo(curIndex);
                          },2500);


                         //对左上角按钮index进行事件绑定处理等
                         $(".cont-navi").find("span").each(function(item){
                             $(this).hover(function(){
                                 clearInterval(autoChange);
                                 changeTo(item);
                                 curIndex = item;
                              },function(){
                                 autoChangeAgain();
                             });
                         });

                         //清除定时器时候的重置定时器--封装
                         function autoChangeAgain(){
                                 autoChange = setInterval(function(){
                                 if(curIndex < imgLen-1){
                                      curIndex ++;
                                 }else{
                                     curIndex = 0;
                                 }
                             //调用变换处理函数
