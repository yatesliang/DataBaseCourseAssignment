                         function changeTo(num){
                             var goLeft = num *  400;
                            $(".relv-content-list").find("li").removeClass("on-top").eq(num).addClass("on-top");
                             $(".cont-navi").find("span").removeClass("active").eq(num).addClass("active");
                         }
