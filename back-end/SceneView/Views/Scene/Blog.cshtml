                    {
                        <li><a href="#" aria-label="Previous" id="page1"><span aria-hidden="true">上一页</span></a></li>
                    }
                }
                @{

                    for (int i = 0; i < Model.pagetotal; i++)
                    {
                        <li><a href="/Scene/Blog?page=@i" id="page@i">@(i + 1)</a></li>
                    }
                }
                @{
